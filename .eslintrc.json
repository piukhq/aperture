{
  "plugins":["jest"],
  "extends": ["next/core-web-vitals", "eslint:recommended", "next"],
  "rules": { // Additional rules decided by us. See https://eslint.org/docs/rules/ for more info.
    // Suggestions
    "eqeqeq": "error",
    "no-param-reassign": "error",
    "curly": "error",
    // Layout and Formatting - Warnings as they are auto-fixed by Husky pre-commit
    "array-bracket-spacing": 1,
    "arrow-spacing": 1,
    "block-spacing": 1,
    "comma-dangle": [1, "always-multiline"],
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": 1,
    "eol-last": 1,  
    "func-call-spacing": 1, 
    "implicit-arrow-linebreak": 1,
    "indent": [1, 2],
    "jsx-quotes": [1, "prefer-single"],
    "key-spacing": [1, { "beforeColon": false }],
    "newline-per-chained-call": 1,
    "no-extra-parens": 1,
    "no-multi-spaces": 1,
    "no-multiple-empty-lines": 1,
    "no-trailing-spaces": 1,
    "no-whitespace-before-property": 1,
    "nonblock-statement-body-position": 1,
    "object-curly-spacing": 1,
    "quotes": [1, "single"],
    "rest-spread-spacing": 1,
    "semi": [1, "never"],
    "semi-spacing": 1,
    "space-before-blocks": 1,
    "space-before-function-paren": 1,
    "space-in-parens": 1,
    "space-infix-ops": [1, { "int32Hint": false }],
    "switch-colon-spacing": [1, {"after": true, "before": false}],
    "template-curly-spacing": [1, "never"],
    "template-tag-spacing": 1
  }
}